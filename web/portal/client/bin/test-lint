#!/bin/bash
set -e

pushd /opt/irontec/ivozprovider/web/client
    # Install required dependencies
    yarnpkg install

    # Run linter
    yarnpkg lint

    CHANGED_FILES=$(git diff --name-only .)

    if [ -z "$CHANGED_FILES" ]; then
        echo "No files were changed in these commits."
        exit 0
    fi

    exit 1
popd